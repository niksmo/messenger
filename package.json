{
  "name": "messenger",
  "author": "niksmo",
  "description": "web messenger",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "mocha",
    "build": "tsc && vite build",
    "start": "npm run build && node src/server/app.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "stylelint": "stylelint \"**/*.css\"",
    "eslint": "node_modules/.bin/eslint --ext .js,.ts \"./\"",
    "lint": "npm run typecheck && prettier . --check && npm run stylelint && npm run eslint",
    "lint-fix": "stylelint \"**/*.css\" --fix && prettier . --write && node_modules/.bin/eslint --ext .js,.ts \"./\" --fix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "esm-loader-typescript": "^1.0.6",
    "express": "^4.18.2",
    "jsdom": "^24.0.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.3.0",
    "prettier": "3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "typescript": "^5.3.3",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  }
}
