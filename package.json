{
  "name": "messenger",
  "author": "niksmo",
  "description": "web messenger",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "mocha",
    "build": "tsc && vite build",
    "start": "npm run build && node src/server/app.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "stylelint": "stylelint \"**/*.css\"",
    "eslint": "node_modules/.bin/eslint --ext .js,.ts \"./\"",
    "lint": "npm run typecheck && prettier . --check && npm run stylelint && npm run eslint",
    "lint-fix": "stylelint \"**/*.css\" --fix && prettier . --write && node_modules/.bin/eslint --ext .js,.ts \"./\" --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/chai": "4.3.11",
    "@types/mocha": "10.0.6",
    "@types/node": "20.8.9",
    "@types/sinon": "17.0.3",
    "@types/sinon-chai": "3.2.12",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "autoprefixer": "10.4.16",
    "chai": "5.0.3",
    "cssnano": "6.0.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.4.0",
    "eslint-plugin-promise": "6.1.1",
    "esm-loader-typescript": "1.0.6",
    "express": "4.18.2",
    "husky": "^9.0.6",
    "jsdom": "24.0.0",
    "mocha": "10.2.0",
    "node-esm-loader": "0.3.0",
    "prettier": "3.1.1",
    "sinon": "17.0.1",
    "sinon-chai": "3.7.0",
    "stylelint": "16.0.2",
    "stylelint-config-standard": "35.0.0",
    "typescript": "5.3.3",
    "vite": "4.5.2"
  },
  "dependencies": {
    "handlebars": "4.7.8"
  }
}
