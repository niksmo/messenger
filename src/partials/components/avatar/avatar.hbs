<div class="avatar no-select">

  {{#if src}}
    <img class="avatar-inner avatar__image" src={{src}} alt="{{name}} avatar" draggable=" false" decoding="async">
  {{else}}
    <div class="avatar-inner avatar__char" role="img" aria-label={{name}}>{{#getNamePrefix}}{{/getNamePrefix}}</div>
  {{/if}}

</div>