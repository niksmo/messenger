<div class="chat-list-block{{#if extClass}} {{extClass}}{{/if}}">

  {{#> layouts/top-bar/top-bar extClass="chat-list__top"}}

    {{#> components/icon-button/icon-button extClass="chat-list__button open-settings" leadingIcon="menu"}}
    {{/components/icon-button/icon-button}}

    {{> components/search/search extClass="chat-list__search" id="search" name="search" placeholder="Search"}}

    {{#> components/icon-button/icon-button extClass="chat-list__button add-chat tg-dropdown" leadingIcon="add-chat"}}
      {{#> components/menu/menu extClass="dropdown dropdown_bottom dropdown_right"}}
        <li>
          {{> components/menu/menu-item leadingIcon="paperclip" label="test label"}}
        </li>
        <li>
          {{> components/menu/menu-item leadingIcon="paperclip" label="test label" negative=true}}
        </li>
      {{/components/menu/menu}}
    {{/components/icon-button/icon-button}}

  {{/layouts/top-bar/top-bar}}

  <ul class="chat-list__list base-list">
    <li class="chat-list__item"></li>
  </ul>

</div>