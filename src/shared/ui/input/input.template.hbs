<div class="{{styles.form-input}}">
  <input
    class="{{styles.form-input__inner}}{{#if error}} {{styles.form-input__inner_error}}{{/if}}"
    type={{type}} name={{name}} placeholder="{{placeholder}}" id={{id}}
    value={{value}}>
  <label class="{{styles.form-input__label}}" for={{id}}>{{placeholder}}</label>
  <p class="{{styles.form-input__support}} no-select">{{hint}}</p>
</div>
